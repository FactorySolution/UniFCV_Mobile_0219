<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalheCarrosActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_detalhe_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/audir8" />

    <TextView
        android:id="@+id/text_detalhe_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/modelo"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_detalhe_fabricante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/fabricante"
        android:textAllCaps="true"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/text_detalhe_potencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/potencia"
        android:textSize="55sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_detalhe_cavalos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/potencia"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_detalhe_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor"
        android:textSize="45sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/valor"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:textStyle="bold" />

</LinearLayout>