<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorbacklight"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCarros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/corolla"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txtModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgCarros"
            android:layout_alignStart="@id/imgCarros"
            android:layout_alignLeft="@id/imgCarros"
            android:text="Carrooooooo"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtModelo"
            android:layout_alignRight="@id/imgCarros"
            android:layout_alignEnd="@id/imgCarros"
            android:text="Clique Aqui!!!"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

